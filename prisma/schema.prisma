// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  password String
  email String @unique
  updated DateTime @updatedAt
  created DateTime @default(now())
  renting Property? @relation("Renting")
  properties Property[] @relation("Properties")
  active Boolean @default(true)
  token  String?
  payment Payment[]
}

enum PurchaseMethod {
  rent
  sell
}

enum HomeType {
  SINGLE_FAMILY
  MULTI_FAMILY
  CONDO
  TOWNHOUSE
  MOBILE_HOME
  LAND
  OTHER
}

model Property {
  id Int @id @default(autoincrement())
  
  // address information
  streetAddress String
  city String
  state String
  zipcode String
  // add a unique full address line

  // property information
  bedrooms Int
  bathrooms Int
  garage Int @default(0)
  yearBuilt Int
  longitude Float
  latitude Float
  description String
  homeType HomeType
  parcelId String @unique
  lotSize Int
  lotAreaUnits String
  livingArea Int
  livingAreaUnits String
  zpid Int @unique
  zillowLink String?

  // database information
  updated DateTime @updatedAt @default(now())
  created DateTime @default(now())

  // financial information
  price Float
  purchaseMethod PurchaseMethod

  // fees
  tax Float
  capex Float @default(0.10)
  vacancy Float @default(0.05)
  hoa Float? @default(0)
  management Float @default(0.10)
  annualHomeownersInsurance Float

  // relationships
  tenant User? @relation(fields: [tenantId], references: [id], name: "Renting")
  tenantId Int? @unique
  owner User @relation(fields: [ownerId], references: [id], name: "Properties")
  ownerId Int 
  payments Payment[]

  // other
  likesCount Int @default(0)
  likes Int[]

  images Image[]
}

model Payment {
  id Int @id @default(autoincrement())
  amount Float
  propertyId Int
  property Property @relation(fields: [propertyId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
  created DateTime @default(now())
  updated DateTime @updatedAt @default(now())

}

model Image {
  id Int @id @default(autoincrement())
  url String
  propertyId Int
  property Property @relation(fields: [propertyId], references: [id])
  created DateTime @default(now())
  updated DateTime @updatedAt @default(now())
  active Boolean @default(true)
}
