// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  password String
  email String @unique
  updated DateTime @updatedAt
  created DateTime @default(now())
  renting Property? @relation("Renting")
  properties Property[] @relation("Properties")
  active Boolean @default(true)
  session Session[]
  token  String?
}

enum PaymentType {
  rent
  sell
}

model Property {
  id Int @id @default(autoincrement())
  
  // address information
  streetAddress String
  city String
  state String
  zipcode String

  // property information
  bedrooms Int
  bathrooms Int
  garage Int
  yearBuilt Int
  longitude Float
  latitude Float
  description String
  homeType String
  parcelId String
  lotSize Int
  lotAreaUnits String
  livingArea Int
  livingAreaUnits String
  zpid Int @unique

  // database information
  updated DateTime @updatedAt @default(now())
  created DateTime @default(now())

  // financial information
  price Float
  paymentType PaymentType

  // fees
  tax Float
  capex Float
  vacancy Float
  hoa Float? @default(0)
  management Float
  annualHomeownersInsurance Float

  // relationships
  tenant User? @relation(fields: [tenantId], references: [id], name: "Renting")
  tenantId Int? @unique
  owner User @relation(fields: [ownerId], references: [id], name: "Properties")
  ownerId Int 

  // other
  likesCount Int @default(0)
  likes Int[]
}

model Session {
  id Int @id @default(autoincrement())
  token String @unique
  userId Int
  user User @relation(fields: [userId], references: [id])
  expires DateTime
  created DateTime @default(now())
}